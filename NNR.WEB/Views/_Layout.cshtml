@model NNR.UIEntity.VM.BaseVM
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="@Scripts.Url("~/bundles/modernizr")"></script>
    <link href="@Styles.Url("~/Content/css")" rel="stylesheet" />
    <link href="metro-icons.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div>
            <a href="@Url.Action("RedirectToLogin", "Base")">
                <img src="~/Images/WebLogo.jpg" class="logoAllign" />
            </a>
            @if (Context.Session["OAuthObj"] != null)
            {
                <div>

                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("GetProfileDetails", "Account")" class="linkHover">Edit Profile</a>
                        </li>
                        <li>
                            <a href="@Url.Action("SignOut", "Account")" class="linkHover">Sign out</a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </header>
    <section class="container " style="min-height:630px;">

        <div class="carousel">
            @RenderBody()
        </div>
    </section>

    <footer>
        <p>&copy; @DateTime.Now.Year - NNR Template</p>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
