@model NNR.UIEntity.VM.CreateUserVM
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create User</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div>
             @Html.TextBoxFor(m => m.Email, new { @placeholder = "Enter Email Address" })
                                        @Html.ValidationMessageFor(m => m.Email)
               @Html.TextBoxFor(m => m.Email, new {@placeholder = "Enter Contact Number" })
                                        @Html.ValidationMessageFor(m => m.Email)
              @Html.PasswordFor(m => m.Password, new {@placeholder = "Enter Password" })
                                        @Html.ValidationMessageFor(m => m.Password)
              
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
